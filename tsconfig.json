{
  "compilerOptions": {
    // General
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "target": "ESNext",
    "skipLibCheck": true,

    // Modules
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,

    // Type Checking & Safety
    "strict": true,
    "types": ["vite/client"]
  },
  "include": ["src", "src/types"]
}
